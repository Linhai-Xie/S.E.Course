<p id="notice"><%= notice %></p>


<!-- 个人信息展示页 -->
<!-- 头像前端代码 -->
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>用户名：</strong>
  <%= @user.name %>
</p>

<p>
  <strong>邮箱：</strong>
  <%= @user.email %>
</p>

<p>
  <strong>培养单位：</strong>
  <%= @user.dept %>
</p>

<%= link_to '账户设置', edit_user_path(@user) %>
  |
<%= link_to '返回上一页', users_path %>

<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>

